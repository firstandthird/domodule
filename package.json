{
  "name": "domodule",
  "version": "9.0.0",
  "description": "Class-based JavaScript modules accessible via the DOM.",
  "keywords": [
    "module",
    "browser",
    "javascript",
    "typescript"
  ],
  "repository": "https://github.com/firstandthird/domodule",
  "license": "MIT",
  "author": "First+Third",
  "main": "src/domodule.ts",
  "module": "dist/domodule.module.js",
  "types": "dist/domodule.d.ts",
  "scripts": {
    "build": "microbundle",
    "dev": "microbundle watch",
    "docgen": "api-extractor run && api-documenter markdown --input-folder ./temp --output-folder ./docs",
    "docgen:local": "api-extractor run --local --verbose",
    "lint": "eslint ./src ./lib ./test",
    "prepublishOnly": "npm run lint && microbundle",
    "test": "jest"
  },
  "dependencies": {
    "attrobj": "^3.1.0",
    "aug": "^4.0.0",
    "domassist": "^2.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.5",
    "@babel/preset-env": "^7.20.2",
    "@types/jest": "^29.2.4",
    "@typescript-eslint/eslint-plugin": "^5.46.0",
    "@typescript-eslint/parser": "^5.46.0",
    "babel-jest": "^29.3.1",
    "eslint": "^8.29.0",
    "eslint-config-firstandthird": "^6.0.3",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-compat": "^4.0.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.6",
    "eslint-plugin-tsdoc": "^0.2.17",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "microbundle": "^0.15.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "publishConfig": {
    "main": "dist/domodule.js",
    "source": "src/domodule.ts"
  },
  "esmodule": "dist/domodule.modern.js",
  "watch": {
    "lib/*.js": [
      "lint",
      "test"
    ],
    "test/*.js": [
      "lint",
      "test"
    ]
  }
}
