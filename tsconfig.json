{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "types": ["node", "jest"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist/types",
    "declarationMap": true
  },
  "include": ["./lib/**/*"]
}
